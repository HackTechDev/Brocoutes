{% extends 'BrocoutesBrocanteBundle::layout.html.twig' %}

{% form_theme edit_form _self %}
 
{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        <ul class="error_list">
            {% for error in errors %}
                <li>{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}
 
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/brocoutes/css/job.css') }}" type="text/css" media="all" />
{% endblock %}

{% block content %}
        <h1>Mise-à-jour de la manifestation</h1>
    <form action="{{ path('manifestation_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <table id="manifestation_form">
            <tbody>
                <tr>
                    <th>{{ form_label(edit_form.nom) }}</th>
                    <td>
                        {{ form_errors(edit_form.nom) }}
                        {{ form_widget(edit_form.nom) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(edit_form.lieu) }}</th>
                    <td>
                        {{ form_errors(edit_form.lieu) }}
                        {{ form_widget(edit_form.lieu) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(edit_form.date) }}</th>
                    <td>
                        {{ form_errors(edit_form.date) }}
                        {{ form_widget(edit_form.date) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(edit_form.latitude) }}</th>
                    <td>
                        {{ form_errors(edit_form.latitude) }}
                        {{ form_widget(edit_form.latitude) }}
                    </td>
                </tr>
                <tr>
                    <th>{{ form_label(edit_form.longitude) }}</th>
                    <td>
                        {{ form_errors(edit_form.longitude) }}
                        {{ form_widget(edit_form.longitude) }}
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td>
                        <input type="submit" value="Enregistrer la manifestation" />
                    </td>
                    <td>
                    </td>
                </tr>
            </tfoot>

        </table>
    {{ form_end(edit_form) }}
        <br/>
        <ul class="record_actions">
            <li>
                <a href="{{ path('manifestation') }}">
                    Retour à liste des manifestations
                </a>
            </li>
       </ul>
{% endblock %}
